<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="anchorPane" prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainScreenController">
   <children>
      <TextField fx:id="username" layoutX="119.0" layoutY="300.0" prefHeight="25.0" prefWidth="167.0" promptText="Username">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>
      <PasswordField fx:id="password" layoutX="119.0" layoutY="368.0" prefHeight="25.0" prefWidth="167.0" promptText="Password">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></PasswordField>
      <Button fx:id="login" layoutX="118.0" layoutY="475.0" mnemonicParsing="false" onAction="#onLogin" prefHeight="25.0" prefWidth="167.0" style="-fx-background-radius: 45; -fx-background-color: #00F6FF; -fx-border-radius: 45; -fx-border-color: #FAF9F6;" text="Login">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Label fx:id="time" alignment="CENTER" layoutX="117.0" layoutY="561.0" prefHeight="17.0" prefWidth="167.0" text="Time Zone" textAlignment="JUSTIFY" underline="true" />
      <Label fx:id="passwordLabel" layoutX="119.0" layoutY="350.0" style="-fx-text-fill: #1C6CF6;" text="Password" />
      <Label fx:id="usernameLabel" layoutX="119.0" layoutY="283.0" style="-fx-text-fill: #1C6CF6;" text="Username" />
      <Label fx:id="crmLabel" layoutX="143.0" layoutY="230.0" style="-fx-text-fill: #1C6CF6;" text="CRM LOGIN">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="createLabel" layoutX="158.0" layoutY="414.0" onMouseClicked="#onCreateAccount" style="-fx-cursor: hand; -fx-text-fill: #1C6CF6;" text="Create Account" textFill="#001aff" />
      <Label fx:id="forgotLabel" layoutX="154.0" layoutY="437.0" onMouseClicked="#onForgotPassword" style="-fx-cursor: hand; -fx-text-fill: #1C6CF6;" text="Forgot Password" textFill="#001aff" />
      <Label fx:id="locationLabel" layoutX="178.0" layoutY="578.0" text="Location" underline="true" />
      <ImageView fx:id="logo" fitHeight="200.0" fitWidth="200.0" layoutX="103.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
