<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="1500.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AllCustomersController">
   <children>
      <Label layoutX="73.0" layoutY="30.0" text="All Customers">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <TableView fx:id="customersTable" layoutX="73.0" layoutY="178.0" prefHeight="514.0" prefWidth="1342.0">
        <columns>
            <TableColumn fx:id="customerIdCol" prefWidth="76.0" text="Customer ID" />
            <TableColumn fx:id="nameCol" prefWidth="173.0" text="Customer Name" />
            <TableColumn fx:id="addressCol" prefWidth="214.0" text="Address" />
            <TableColumn fx:id="postalCodeCol" prefWidth="106.0" text="Postal Code" />
            <TableColumn fx:id="phoneNumberCol" prefWidth="159.0" text="Phone Number" />
            <TableColumn fx:id="createDateCol" prefWidth="159.0" text="Create Date" />
            <TableColumn fx:id="createdByCol" prefWidth="111.0" text="Created By" />
            <TableColumn fx:id="lastUpdateCol" prefWidth="169.0" text="Last Update" />
            <TableColumn fx:id="lastUpdatedByCol" prefWidth="101.0" text="Last Update By" />
            <TableColumn fx:id="divisionIdCol" prefWidth="73.0" text="Division ID" />
        </columns>
      </TableView>
      <TextField fx:id="searchCustomers" layoutX="1215.0" layoutY="145.0" onAction="#onSearchCustomers" prefHeight="25.0" prefWidth="200.0" promptText="Search Customer Name" />
       <Label layoutX="916.0" layoutY="35.0" onMouseClicked="#onHomeClick" style="-fx-cursor: hand;" text="Home">
           <font>
               <Font size="15.0" />
           </font></Label>
       <Label layoutX="1002.0" layoutY="35.0" onMouseClicked="#onCustomersClick" style="-fx-cursor: hand;" text="Customers">
           <font>
               <Font size="15.0" />
           </font></Label>
       <Label layoutX="1106.0" layoutY="35.0" onMouseClicked="#onScheduleClick" style="-fx-cursor: hand;" text="Schedule Appointment">
           <font>
               <Font size="15.0" />
           </font></Label>
       <Label layoutX="1285.0" layoutY="35.0" onMouseClicked="#onReportClick" style="-fx-cursor: hand;" text="Generate Report">
           <font>
               <Font size="15.0" />
           </font></Label>
      <Label layoutX="73.0" layoutY="147.0" text="Customers" underline="true">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Button layoutX="1124.0" layoutY="706.0" mnemonicParsing="false" onAction="#onAddCustomer" prefHeight="25.0" prefWidth="91.0" style="-fx-background-radius: 45;" text="Add">
         <font>
            <Font size="15.0" />
         </font></Button>
      <Button layoutX="1224.0" layoutY="706.0" mnemonicParsing="false" onAction="#onUpdateCustomer" prefHeight="25.0" prefWidth="91.0" style="-fx-background-radius: 45;" text="Update">
          <font>
              <Font size="15.0" />
          </font></Button>
      <Button layoutX="1324.0" layoutY="706.0" mnemonicParsing="false" onAction="#onDeleteCustomer" prefHeight="25.0" prefWidth="91.0" style="-fx-background-radius: 45;" text="Delete">
          <font>
              <Font size="15.0" />
          </font></Button>
   </children>
</AnchorPane>
